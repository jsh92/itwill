<script type="text/javascript">
	$(document).ready(function(){
		$('button').first().click(function(){
			$('.list').toggle();
		});
		
		$('button').eq(1).click(function(){
			$('.list2').slideToggle();
		});
		
		$('button').last().click(function(){
			$('.list3').fadeToggle();
		});
	});
	
</script>
</head>
